{
  "verbose": true,
  "ignore": ["analyses-storage", "dist"],
  "watch": [
    "apps/backend/src/**/*.js",
    "apps/backend/config/*.js",
    "apps/backend/src/**/*.ts",
    "apps/backend/config/*.ts"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts",
  "delay": "1000",
  "execMap": {
    "js": "node",
    "ts": "ts-node"
  },
  "events": {
    "restart": "echo \"Application restarted due to changes!\""
  },
  "restartable": "rs"
}
